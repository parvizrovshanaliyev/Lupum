@model  Lupum_Yolcu.Models.User
@{
    ViewBag.Title = "Edit User";
}

<div id="content_wrapper" class="card-overlay">
    <div id="header_wrapper" class="header-md">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <header id="header">
                        <h1>Edit User</h1>
                        <ol class="breadcrumb">
                            <li><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                            <li><a href="@Url.Action("Index","Users")">Groups</a></li>
                            <li class="active">Edit User</li>
                        </ol>
                    </header>
                </div>
            </div>
        </div>
    </div>
    <div id="content" class="container-fluid">
        <div class="content-body">
            <div class="row">

                <div class="col-xs-12 col-md-12">
                    <div class="card p-b-20">

                        <div class="card-body">

                            <form action="@Url.Action("Edit",new { id=Model.Id})" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group label-floating is-empty">
                                    <label > User Status</label>
                                    <div class="togglebutton m-b-15">
                                        <label style="margin-top: 2%;">
                                            @if (Model.Token != null)
                                            {

                                                
                                                <span style="border-radius: 20px;padding: 8px 12px;text-transform: uppercase;font-size: 1.5625em" class="label label-danger">Invited, Not Approved</span>
                                            }
                                            else
                                            {
                                                <input name="Status" value="true" type="checkbox" class="toggle-success" @(Model.Status ? "checked" : "") />

                                            }
                                        </label>
                                        
                                        

                                    </div>
                                   @* <input type="text" id="Status" required name="Status" class="form-control">*@
                                </div>
                                <div class="form-group label-floating is-empty">
                                    <label for="GroupId">Groups</label>
                                    <select class="form-control" name="GroupId" id="GroupId">
                                        @foreach (var group in ViewBag.Groups)
                                        {
                                            <option @(group.Id == Model.GroupId ? "selected":"") value="@group.Id">@group.Name</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>





