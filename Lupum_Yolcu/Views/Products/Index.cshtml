@model IEnumerable<Lupum_Yolcu.Models.Product>
@{
    ViewBag.Title = "Products";
}
<div id="content_wrapper" class="card-overlay">
    <div id="header_wrapper" class="header-md ecom-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <header id="header">
                        <h1>@ViewBag.Title</h1>
                        <ol class="breadcrumb">
                            <li><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                            <li class="active">@ViewBag.Title</li>
                        </ol>
                    </header>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="card">
                        <header class="card-heading ">
                            <h2 class="card-title">Products Table</h2>
                            <a href="@Url.Action("Create")" class="btn btn-default">
                                Create Product
                            </a>

                        </header>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover customer-table">

                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Colors</th>
                                            <th>Status</th>
                                            <th></th>
                                            <th></th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model)
                                        {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Price.ToString("0.##")</td>
                                            <td>@product.Colors</td>
                                            <td>
                                                @if (product.Status)
                                                {
                                                    <span class="label label-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-info">Passive</span>
                                                }
                                            </td>
                                            <td></td>
                                            <td></td>
                                            <td>
                                                <a href="@Url.Action("Edit",new{id=product.Id})" class="icon "><i class="zmdi zmdi-edit"></i></a>

                                                @if (product.OrderItems.Count() == 0)
                                                {
                                                    <a href="@Url.Action("delete",new{id=product.Id})" class="icon delete"><i class="zmdi zmdi-delete"></i></a>

                                                }
                                                else
                                                {
                                                    <span class="label label-success">Siparis edilib siline bilmez</span>
                                                }
                                            </td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






