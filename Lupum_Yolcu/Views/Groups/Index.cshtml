  @model IEnumerable<Lupum_Yolcu.Models.Group>
@{
    ViewBag.Title = "Groups";
}


    <div id="content_wrapper" class="card-overlay">
        <div id="header_wrapper" class="header-md ecom-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <header id="header">
                            <h1>Groups</h1>
                            <ol class="breadcrumb">
                                <li><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                                <li class="active">Groups</li>
                            </ol>
                        </header>
                    </div>
                </div>
            </div>
        </div>
        <div id="content" class="container">
            <div class="content-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="card">
                            <header class="card-heading ">
                                <h2 class="card-title">Groups Table</h2>
                                
                                <ul class="card-actions icons right-top">
                                    <li>
                                        <a href="@Url.Action("Create")" class="btn btn-primary" >
                                            <i class="zmdi zmdi-plus"></i>
                                        </a>
                                    </li>
                                    
                                </ul>
                            </header>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover customer-table">
                                       
                                        <thead>
                                            <tr> 
                                                <th>Name</th>
                                                <th>Users</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var group in Model)
                                            {
                                                <tr>
                                                    <td>@group.Name</td>
                                                    <td>@string.Join(", ",group.Users.Select(u=>u.Fullname).ToArray())</td>
                                                    <td>
                                                        <a href="@Url.Action("Edit",new{id=group.Id})" class="icon edit-customer"><i class="zmdi zmdi-edit"></i></a>

                                                        @if (group.Users.Count() == 0)
                                                        {
                                                            <a href="@Url.Action("Delete",new { id=group.Id})" class="icon delete"><i class="zmdi zmdi-delete"></i></a>

                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   


